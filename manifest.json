{
    "name": "A Better Subscription Service",
    "short_name": "ABS extension",
    "description": "Browser extension that helps you subscribe to playlists",
    "homepage_url": "https://github.com/chizuo/ABS-Browser-App",
    "version": "0.1",
    "version_name": "0.1",
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "permissions": [],
    "icons": {
        "128": "./assets/img/inactive/playlist_tracker_icon_128.png"
    },
    "background": {
        "service_worker": "./src/background.js"
    },
    "action": {
        "default_icon": {
            "16": "./assets/img/inactive/playlist_tracker_icon_16.png",
            "24": "./assets/img/inactive/playlist_tracker_icon_24.png",
            "32": "./assets/img/inactive/playlist_tracker_icon_32.png"
        },
        "default_title": "A Better Subscription Service",
        "default_popup": "popup.html"
    }
}